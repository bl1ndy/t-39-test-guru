<header class="navbar navbar-fixed-top p-3 bg-dark">
  <div class="container">
    <%= link_to t('.links.home'), root_path, class: 'navbar-brand mb-0 h1 text-white' %>

    <ul class="nav col-12 col-lg-auto">
      <% if current_user&.admin? %>
        <li class="nav-link px-2 text-white"><%= "\u2699 #{t('.admin')}:" %></li>
        <li><%= link_to t('.links.admin.tests'), admin_tests_path, class: 'nav-link px-2 text-white' %></li>
        <li><%= link_to t('.links.admin.badges'), admin_badges_path, class: 'nav-link px-2 text-white' %></li>
      <% end %>
    </ul>

    <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-12 col-lg-auto mb-md-0">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle nav-link px-2 text-white" data-bs-toggle="dropdown">
              <%= t('.greeting', name: current_user.first_name.capitalize) %> <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
              <li><%= link_to t('.buttons.logout'), destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('.links.signup'), new_user_registration_path, class: 'nav-link px-2 text-white' %></li>
          <li><%= link_to t('.links.login'), new_user_session_path, class: 'nav-link px-2 text-white' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
