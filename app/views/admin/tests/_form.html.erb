<%= form_with(model: [:admin, @test], local: true) do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :level %>
    <%= f.number_field :level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= f.label :countdown %>
    <%= f.number_field :countdown, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= f.check_box :published %>
      <%= f.label :published %>
    </div>
  </div>

  <%= f.submit button_text, class: 'btn btn-primary' %>

  <%= link_to t('.links.back'), admin_tests_path, class: 'btn btn-secondary' %>
<% end %>


