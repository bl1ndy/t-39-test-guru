<div class="card my-3">
  <div class="card-body">
    <div class="card-title">
      <%= link_to question.body, admin_question_path(question), class: 'text-decoration-none' %>
    </div>

    <%= link_to t('.links.edit'), edit_admin_question_path(question), class: 'btn btn-sm btn-info' %>
    <%= link_to t('.links.destroy'), admin_question_path(question),
                method: :delete, data: { confirm: t('.links.confirm') }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
